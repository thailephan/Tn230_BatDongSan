@model IEnumerable<DbContextModel.Framework.ThongTin>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo mới thông tin", "Create")
</p>
<table class="table">
    <tr>
        <th>STT</th>
        <th>
            @Html.DisplayNameFor(model => model.TaiKhoan.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamSinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th></th>
    </tr>

    @{
        var i = 1;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
                @{ i++; }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamSinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaUser }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaUser }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaUser })
            </td>
        </tr>
    }

</table>
