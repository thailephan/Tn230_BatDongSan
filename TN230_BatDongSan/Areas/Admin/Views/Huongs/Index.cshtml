@model IEnumerable<DbContextModel.Framework.Huong>

@{
    ViewBag.Title = "Danh sách - Hướng";
}

<h3>Hướng bất động sản</h3>
<p>
    @Html.ActionLink("Thêm hướng mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenHuong)
        </th>
        <th></th>
    </tr>

    @{ var i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
                @{ i++; }
            </td>
            <td>
                @Html.DisplayFor(model => item.TenHuong)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaHuong }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaHuong })
            </td>
        </tr>
    }

</table>
