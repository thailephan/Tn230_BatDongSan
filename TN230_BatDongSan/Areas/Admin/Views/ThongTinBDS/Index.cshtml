@model PagedList.IPagedList<DbContextModel.Framework.ThongTinBDS>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý bất động sản";
}

<h2>Quản lý tin đăng bất động sản</h2>

<p>
    @Html.ActionLink("Đăng tin", "Create")
</p>
<table class="table table-striped table-responsive-md">
    <tr>
        <th>STT</th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.First().TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LoaiBD.TenLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().KhuDanCu.TenKhuDanCu)
        </th>
        <th>
            Dài
            x
            Rộng
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SDTChuBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Gia)
        </th>
        <th></th>
    </tr>

    @{ var i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>@i @{i++;}</td>
            <td>
                <img src="@item.Anhs.First().DuongDan" alt="Tải thất bại" style="width:100px;">
            </td>
            <td class="text-truncate" title="@item.TieuDe" style="max-width:300px;">
                @item.TieuDe
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiBD.TenLoai)
            </td>

            <td>
                @Html.DisplayFor(model => item.KhuDanCu.TenKhuDanCu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChieuDai) x
                @Html.DisplayFor(modelItem => item.ChieuRong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDTChuBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTin }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaTin }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTin })
            </td>
        </tr>
    }

</table>
<div style="margin-left:10px;">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
